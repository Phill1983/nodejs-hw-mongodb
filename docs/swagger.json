{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "Contacts API",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "description": "Це REST API для роботи з контактами. Підтримує авторизацію, CRUD-операції, роботу з фото та email-підтвердження.\n"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    },
    {
      "url": "https://nodejs-hw-mongodb-ept4.onrender.com"
    }
  ],
  "tags": [],
  "paths": {
    "/contacts": {
      "get": {
        "tags": [
          "Contacts"
        ],
        "summary": "Отримати всі контакти",
        "operationId": "getAllContacts",
        "description": "Повертає список усіх контактів користувача",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "favorite",
            "in": "query",
            "description": "Фільтрувати контакти за статусом \"favorite\"",
            "required": false,
            "schema": {
              "type": "boolean"
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Номер сторінки",
            "required": false,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Кількість контактів на сторінці",
            "required": false,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/get_all_200"
          },
          "401": {
            "$ref": "#/components/responses/unauthorised_401"
          }
        }
      },
      "post": {
        "tags": [
          "Contacts"
        ],
        "summary": "Створити новий контакт",
        "operationId": "createContact",
        "description": "Додає новий контакт до списку користувача",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/createContact"
              }
            }
          }
        },
        "responses": {
          "201": {
            "$ref": "#/components/responses/contact_201"
          },
          "400": {
            "$ref": "#/components/responses/error_400"
          },
          "401": {
            "$ref": "#/components/responses/unauthorised_401"
          }
        }
      }
    },
    "/contacts/{contactId}": {
      "get": {
        "tags": [
          "Contacts"
        ],
        "summary": "Отримати контакт за ID 111",
        "operationId": "getContactById",
        "description": "Повертає контакт по його унікальному ідентифікатору",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "contactId",
            "in": "path",
            "required": true,
            "description": "Унікальний ідентифікатор контакту",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/contact_by_id_200"
          },
          "401": {
            "$ref": "#/components/responses/unauthorised_401"
          },
          "404": {
            "$ref": "#/components/responses/contact_404"
          }
        }
      },
      "delete": {
        "tags": [
          "Contacts"
        ],
        "summary": "Видалити контакт",
        "operationId": "deleteContact",
        "description": "Видаляє контакт за ID",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "contactId",
            "in": "path",
            "required": true,
            "description": "ID контакту",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Контакт успішно видалено."
          },
          "401": {
            "$ref": "#/components/responses/unauthorised_401"
          },
          "404": {
            "$ref": "#/components/responses/contact_404"
          }
        }
      },
      "patch": {
        "tags": [
          "Contacts"
        ],
        "summary": "Оновити контакт",
        "operationId": "updateContact",
        "description": "Оновлює контакт за ID",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "contactId",
            "in": "path",
            "required": true,
            "description": "ID контакту",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/updateContact"
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/contact_200"
          },
          "400": {
            "$ref": "#/components/responses/error_400"
          },
          "401": {
            "$ref": "#/components/responses/unauthorised_401"
          },
          "404": {
            "$ref": "#/components/responses/contact_404"
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "Реєстрація нового користувача",
        "operationId": "registerUser",
        "description": "Створює нового користувача й повертає токен",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "name",
                  "email",
                  "password"
                ],
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Ім'я",
                    "description": "Ім'я користувача"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "example@example.com",
                    "description": "Ваш email"
                  },
                  "password": {
                    "type": "string",
                    "format": "password",
                    "example": "password",
                    "description": "Ваш пароль"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "$ref": "#/components/responses/user_reg_201"
          },
          "400": {
            "description": "Bad request - Помилка валідації"
          },
          "409": {
            "description": "Conflict - Email вже використовується"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Логін користувача",
        "operationId": "loginUser",
        "description": "Аутентифікація користувача та отримання токена",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email",
                  "password"
                ],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "example@gmail.com"
                  },
                  "password": {
                    "type": "string",
                    "format": "password"
                  }
                }
              }
            }
          }
        },
        "security": [],
        "responses": {
          "200": {
            "description": "Вхід користувача успішний",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Вхід користувача успішний!"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "accessToken": {
                          "type": "string",
                          "example": "M1EiD54qm+x+1+CsC00DpDhukXd1pJaJGYGX0iMv"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/unauthorised_401"
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Вихід користувача",
        "operationId": "logoutUser",
        "description": "Скидає токен користувача",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "204": {
            "description": "Успішний вихід"
          },
          "401": {
            "$ref": "#/components/responses/unauthorised_401"
          }
        }
      }
    },
    "/auth/reset-pwd": {
      "post": {
        "tags": [
          "Auth"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "Скинути пароль",
        "operationId": "resetPassword",
        "description": "Скидає пароль за токеном, який був отриманий через email. Email не передається напряму — він витягується з токена.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "token",
                  "password"
                ],
                "properties": {
                  "token": {
                    "type": "string",
                    "description": "JWT токен для скидання пароля",
                    "example": "token"
                  },
                  "password": {
                    "type": "string",
                    "description": "Новий пароль для облікового запису користувача",
                    "example": "examplePassword"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Password successfully reset",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "message",
                    "status",
                    "data"
                  ],
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Password has been successfully reset."
                    },
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "data": {
                      "type": "object",
                      "description": "Empty object"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/unauthorised_401"
          },
          "404": {
            "$ref": "#/components/responses/user_reg_404"
          }
        }
      }
    },
    "/auth/send-reset-email": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Надіслати лист для скидання пароля",
        "operationId": "sendResetEmail",
        "description": "Надсилає лист із лінком для скидання пароля на email",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email"
                ],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "example@example.com"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Підтвердження для скидання пароля успішно надіслано на email",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Reset password email has been successfully sent."
                    },
                    "data": {
                      "type": "object",
                      "example": {}
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/unauthorised_401"
          },
          "404": {
            "$ref": "#/components/responses/user_reg_404"
          }
        }
      }
    },
    "/auth/refresh": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Оновити accessToken",
        "operationId": "refreshSession",
        "description": "Повертає новий accessToken. Очікує refreshToken в cookie.",
        "security": [],
        "responses": {
          "200": {
            "description": "Новий accessToken",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully refreshed a session!"
                    },
                    "data": {
                      "type": "object",
                      "required": [
                        "accessToken"
                      ],
                      "properties": {
                        "accessToken": {
                          "type": "string",
                          "example": "Y/ja2tZ1abSAnC/lEJRiutLgz9vAnsD0r/qe6Dcb"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/unauthorised_401"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "contact": {
        "type": "object",
        "required": [
          "_id",
          "name",
          "phoneNumber",
          "isFavourite",
          "contactType",
          "userId",
          "createdAt",
          "updatedAt"
        ],
        "properties": {
          "_id": {
            "type": "string",
            "description": "Id контакта",
            "example": "65e4decdd286b30065d54af9"
          },
          "name": {
            "type": "string",
            "description": "Імя контакта",
            "example": "John Doe"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Email контакта",
            "example": "example@example.com"
          },
          "phoneNumber": {
            "type": "string",
            "description": "Номер телефона контакта",
            "example": "+380501234567"
          },
          "isFavourite": {
            "type": "boolean",
            "description": "Чи є контакт у вибраних",
            "example": false
          },
          "contactType": {
            "type": "string",
            "enum": [
              "work",
              "home",
              "personal"
            ],
            "description": "Тип контакта",
            "example": "personal"
          },
          "userId": {
            "type": "string",
            "description": "ID власника контакта",
            "example": "65e4decdd286b30065d54af9"
          },
          "photo": {
            "type": "string",
            "format": "binary",
            "description": "посилання на фото контакта",
            "example": "https://res.cloudinary.com/yourcloud/image/upload/image.jpg"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Date of creation",
            "example": "2024-05-12T12:34:56.789Z"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Last update date",
            "example": "2024-08-01T10:22:33.123Z"
          }
        }
      },
      "createContact": {
        "type": "object",
        "required": [
          "name",
          "phoneNumber",
          "contactType"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "Ім'я контакту",
            "example": "Василь Гупало"
          },
          "phoneNumber": {
            "type": "string",
            "description": "Номер телефону",
            "example": 380931231231
          },
          "email": {
            "type": "string",
            "description": "Email (необов'язково)",
            "example": "example@example.com"
          },
          "isFavourite": {
            "type": "boolean",
            "description": "Контакт у вибраних",
            "example": false
          },
          "contactType": {
            "type": "string",
            "enum": [
              "work",
              "home",
              "personal"
            ],
            "description": "Тип контакту",
            "example": "personal"
          },
          "photo": {
            "type": "string",
            "format": "binary",
            "description": "Фото контакту (файл)"
          }
        }
      },
      "updateContact": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Імʼя контакту",
            "example": "Василь Гупало"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Email контакту",
            "example": "example@example.com"
          },
          "phoneNumber": {
            "type": "string",
            "description": "Номер телефону",
            "example": 380931231231
          },
          "isFavourite": {
            "type": "boolean",
            "description": "Контакт у вибраних",
            "example": true
          },
          "contactType": {
            "type": "string",
            "enum": [
              "work",
              "home",
              "personal"
            ],
            "description": "Тип контакту",
            "example": "home"
          },
          "photo": {
            "type": "string",
            "format": "binary",
            "description": "Фото контакту (файл)"
          }
        }
      }
    },
    "responses": {
      "get_all_200": {
        "description": "Список контактів успішно отримано",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 200
                },
                "message": {
                  "type": "string",
                  "example": "Successfully found contacts!"
                },
                "data": {
                  "type": "object",
                  "required": [
                    "data",
                    "page",
                    "perPage",
                    "totalItems",
                    "totalPages",
                    "hasPreviousPage",
                    "hasNextPage"
                  ],
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/contact"
                      }
                    },
                    "page": {
                      "type": "integer",
                      "example": 1
                    },
                    "perPage": {
                      "type": "integer",
                      "example": 10
                    },
                    "totalItems": {
                      "type": "integer",
                      "example": 3
                    },
                    "totalPages": {
                      "type": "integer",
                      "example": 1
                    },
                    "hasPreviousPage": {
                      "type": "boolean",
                      "example": false
                    },
                    "hasNextPage": {
                      "type": "boolean",
                      "example": false
                    }
                  }
                }
              }
            }
          }
        }
      },
      "unauthorised_401": {
        "description": "Unauthorized error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 401
                },
                "message": {
                  "type": "string",
                  "example": "UnauthorizedError"
                },
                "data": {
                  "type": "object",
                  "required": [
                    "message"
                  ],
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Access token expired"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "contact_201": {
        "type": "object",
        "description": "Contact successfully created",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "message",
                "status",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 201
                },
                "message": {
                  "type": "string",
                  "example": "Successfully created a contact"
                },
                "data": {
                  "$ref": "#/components/schemas/contact"
                }
              }
            }
          }
        }
      },
      "error_400": {
        "description": "Bad Request",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 400
                },
                "message": {
                  "type": "string",
                  "example": "Invalid contact data"
                }
              }
            }
          }
        }
      },
      "contact_by_id_200": {
        "description": "Контакт успішно отримано",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 200
                },
                "message": {
                  "type": "string",
                  "example": "Successfully found contact with id {contactId}!"
                },
                "data": {
                  "$ref": "#/components/schemas/contact"
                }
              }
            }
          }
        }
      },
      "contact_404": {
        "description": "Contact not found",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 404
                },
                "message": {
                  "type": "string",
                  "example": "Contact not found"
                }
              }
            }
          }
        }
      },
      "contact_200": {
        "type": "object",
        "description": "контакт успішно оновлено",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 200
                },
                "message": {
                  "type": "string",
                  "example": "Contact updated successfully!"
                },
                "data": {
                  "$ref": "#/components/schemas/contact"
                }
              }
            }
          }
